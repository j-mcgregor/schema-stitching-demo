{
  "name": "api-user",
  "version": "1.0.0",
  "description": "graphql microservice exposing User resource",
  "main": "./src/index.js",
  "scripts": {
    "start": "run-p lint:watch start:watch",
    "start:watch": "babel-node ./src/index.js",
    "start:dev": "npm run start:watch -- --inspect=4001",
    "lint": "esw src tools --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "build": "run-s dist:clean lint test build:server copy:files",
    "build:server": "babel -d ./dist ./src -s --ignore '**/*.spec.js'",
    "dist:clean": "rimraf ./dist",
    "copy:files": "copy package.json dist"
  },
  "author": "Jack McGregor",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "amqp-connection-manager": "^2.3.0",
    "amqplib": "^0.5.3",
    "apollo-link": "^1.2.11",
    "apollo-link-error": "^1.1.5",
    "apollo-link-http": "^1.5.9",
    "apollo-server-express": "^2.3.1",
    "axios": "0.18.0",
    "bluebird": "^3.5.3",
    "chalk": "^2.4.1",
    "express": "4.16.4",
    "graphql": "^14.0.2",
    "graphql-iso-date": "^3.6.1",
    "graphql-tag": "^2.10.0",
    "graphql-tools": "4.0.4",
    "graphql-type-json": "^0.2.1",
    "graphql-voyager": "^1.0.0-rc.26",
    "http": "0.0.0",
    "jsonwebtoken": "^8.5.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.18",
    "node-fetch": "^2.3.0",
    "npm-run-all": "4.1.5",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "babel-plugin-graphql-tag": "^1.6.0",
    "babel-plugin-import-graphql": "^2.6.2",
    "babel-plugin-inline-json": "^1.2.2",
    "bcrypt": "^3.0.4",
    "copy": "^0.3.2",
    "dotenv": "^6.2.0",
    "eslint": "5.11.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-watch": "^4.0.2",
    "jest": "^24.1.0",
    "jest-junit-reporter": "1.1.0",
    "jest-util": "^24.0.0",
    "nodemon": "1.18.9",
    "prettier": "^1.15.3",
    "regenerator-runtime": "0.12.1",
    "rimraf": "^2.6.2",
    "unroll": "^1.5.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 0,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js",
      "**/*.test.js"
    ],
    "reporter": [
      "text",
      "cobertura",
      "lcov"
    ],
    "cache": true,
    "all": true
  }
}
